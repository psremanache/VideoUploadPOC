@model Tuple<TalentShower,Video>

@{
    ViewData["Title"] = "Upload";
}

<h2>Upload</h2>

<h4>Video</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Item2.videoName" class="control-label"></label>
                <input asp-for="@Model.Item2.videoName" class="form-control" />
                <span asp-validation-for="@Model.Item2.videoName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Item2.ContentType" class="control-label"></label>
                <input asp-for="@Model.Item2.ContentType" class="form-control" />
                <span asp-validation-for="@Model.Item2.ContentType" class="text-danger"></span>
            </div>
            @Model.Item2.videoUploaderId = @Model.Item1.userId
            <div class="form-group">
                <label>
                    Upload video
                </label>
                <input type="file" name="uploadedFile" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<h4>Uploaded Video</h4>
@if (Model.Item1.hasFile)
{
    <video width="320" height="240" controls>
        <source src="@Url.Action("GetFile", new { id = @Model.Item2.videoFileId })" type="video/mp4">
        Your browser does not support the video tag.
    </video>
}

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
